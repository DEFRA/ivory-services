{
  "name": "ivory-api",
  "version": "0.0.1",
  "description": "GOV.UK REST API service for the Ivory service",
  "author": "Department for Environment, Food & Rural Affairs",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/DEFRA/ivory-api/issues"
  },
  "homepage": "https://github.com/DEFRA/ivory-api#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/ivory-api.git"
  },
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "start": "node index",
    "build": "bin/build.sh",
    "build:psql": "bin/build-psql.sh",
    "docker:build": "docker build --no-cache -t ivory/api .",
    "docker:run": "docker run -p \"3010:3010\" --env-file .env ivory/api",
    "lint": "standard",
    "unit-test": "lab --pattern test --coverage --reporter console --output stdout --reporter html --output coverage.html --reporter lcov --output lcov.info --verbose -I 'core,__core-js_shared__'",
    "api-test": "lab --pattern api --reporter console --output stdout --reporter json --output api-test.json --verbose -I 'core,__core-js_shared__'",
    "test": "npm run lint && npm run unit-test"
  },
  "dependencies": {
    "@hapi/boom": "^7.4.2",
    "@hapi/good": "^8.2.0",
    "@hapi/good-console": "^8.1.0",
    "@hapi/good-squeeze": "^5.2.0",
    "@hapi/hapi": "^18.3.1",
    "@hapi/inert": "^5.2.1",
    "@hapi/joi": "^15.1.0",
    "@hapi/vision": "^5.5.2",
    "adal-node": "^0.1.28",
    "blipp": "^4.0.0",
    "cross-fetch": "^3.0.4",
    "defra-logging-facade": "git+https://github.com/DEFRA/defra-logging-facade.git#master",
    "dotenv": "^8.0.0",
    "glob": "^7.1.4",
    "govuk-frontend": "2.13.0",
    "hapi-robots": "^3.2.0",
    "hapi-router": "^5.0.0",
    "hapi-swagger": "^10.0.2",
    "require-all": "^3.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@hapi/code": "^5.3.1",
    "@hapi/lab": "^19.1.0",
    "node-sass": "4.12.0",
    "sinon": "^7.3.2",
    "standard": "13.1.0",
    "supertest": "^4.0.2"
  }
}
