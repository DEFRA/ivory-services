{
  "name": "ivory-services",
  "version": "0.0.1",
  "description": "GOV.UK REST API service for the Ivory service",
  "author": "Department for Environment, Food & Rural Affairs",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/DEFRA/ivory-services/issues"
  },
  "homepage": "https://github.com/DEFRA/ivory-services#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DEFRA/ivory-services.git"
  },
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "start": "node index",
    "build": "bin/build.sh",
    "build:psql": "bin/build-psql.sh",
    "migrate": "node_modules/.bin/node-pg-migrate",
    "docker:build": "docker build --no-cache -t ivory/api .",
    "docker:run": "docker run -p \"3010:3010\" --env-file .env ivory/api",
    "lint": "standard",
    "unit-test": "lab --coverage --reporter console --output stdout --reporter lcov --output lcov.info --reporter html --output coverage.html --verbose",
    "api-test": "lab --pattern api --reporter console --output stdout --reporter json --output api-test.json --verbose -I 'core,__core-js_shared__'",
    "test": "npm run lint && npm run unit-test"
  },
  "dependencies": {
    "@hapi/boom": "^7.4.3",
    "@hapi/good": "^8.2.2",
    "@hapi/good-console": "^8.1.2",
    "@hapi/good-squeeze": "^5.2.1",
    "@hapi/hapi": "^18.3.2",
    "@hapi/inert": "^5.2.2",
    "@hapi/joi": "^15.1.1",
    "@hapi/vision": "^5.5.4",
    "adal-node": "^0.2.1",
    "blipp": "^4.0.0",
    "cross-fetch": "^3.0.4",
    "defra-logging-facade": "git+https://github.com/DEFRA/defra-logging-facade.git#master",
    "dotenv": "^8.1.0",
    "git-last-commit": "^1.0.0",
    "glob": "^7.1.4",
    "govuk-frontend": "2.13.0",
    "hapi-robots": "^3.2.0",
    "hapi-router": "^5.0.0",
    "hapi-swagger": "^10.1.1",
    "ivory-shared": "git+https://github.com/DEFRA/ivory-shared.git#master",
    "lodash.camelcase": "^4.3.0",
    "lodash.clonedeep": "^4.5.0",
    "pg": "^7.12.1",
    "require-all": "^3.0.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@hapi/code": "^6.0.0",
    "@hapi/lab": "^20.2.2",
    "eslint-utils": "^1.4.2",
    "node-sass": "4.12.0",
    "sinon": "^7.4.2",
    "standard": "14.2.0",
    "supertest": "^4.0.2"
  }
}
